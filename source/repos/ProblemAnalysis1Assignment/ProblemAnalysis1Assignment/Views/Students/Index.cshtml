@model IEnumerable<ProblemAnalysis1Assignment.Models.Student>

@{
    ViewData["Title"] = "Students List";
}

<h1>Students List</h1>

<p>
    <a asp-action="Create">Create New Student</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.First().FirstName)</th>
            <th>@Html.DisplayNameFor(model => model.First().LastName)</th>
            <th>Age</th>
            <th>@Html.DisplayNameFor(model => model.First().GPA)</th>
            <th>GPA Scale</th>
            <th>Program</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model)
{
    <tr>
        <td>@Html.DisplayFor(modelItem => item.FirstName)</td>
        <td>@Html.DisplayFor(modelItem => item.LastName)</td>
        <td>@item.Age</td>
        <td>@Html.DisplayFor(modelItem => item.GPA)</td>
        <td>@item.GPAScale</td>
        <td>@item.Program?.Name</td>
        <td>
            <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
            <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
            <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
        </td>
    </tr>
}
    </tbody>
</table>
